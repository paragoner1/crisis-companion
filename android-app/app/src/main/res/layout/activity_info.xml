<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_navy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="← Back"
                android:textSize="16sp"
                android:background="@drawable/action_button_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📚 App Guide"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="left" />

        </LinearLayout>

        <!-- Mission Statement -->
        <LinearLayout
            android:id="@+id/missionStatementSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 MISSION STATEMENT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To save lives by making emergency response accessible to everyone through voice-activated, blockchain-powered technology that works anywhere, anytime, even offline. Anyone can be a Hero.\n\nTap for important disclaimer →"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:gravity="left" />

        </LinearLayout>

        <!-- Emergency Types & Direct Actions (MOST IMPORTANT) -->
        <LinearLayout
            android:id="@+id/emergencyTypesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚨 Emergency Types &amp; Direct Actions (Offline)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Emergency Protocols Supported (Offline):\n• Drowning, Heart Attack, Stroke\n• Choking, Bleeding, Unconscious\n• Seizure, Poisoning, Severe Burns\n• Diabetic Emergency, Allergic Reaction, Trauma\n• Suicide Prevention, Overdose Reversal, Hypothermia\n\n11 Direct Action Phrases:\n• CPR, Heimlich, AED, Tourniquet\n• EpiPen, Rescue Breathing, First Aid\n• FAST Test, Poison Control, Cool Burn, Medical Alert\n\nAnyone can use these direct action phrases to skip initial context assessment and get immediate, specific guidance.\n\nTap for complete emergency guide →"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Safety Features Deep Dive (SECOND MOST IMPORTANT) -->
        <LinearLayout
            android:id="@+id/safetyFeaturesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🛡️ Safety Features Deep Dive"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silent SOS (Dangerous Situations):\n• Hold power button 3 seconds\n• No visible indication\n• Trusted contacts alerted immediately\n• 911 called automatically\n• Perfect for rideshares, domestic violence\n\nCrash Detection:\n• Automatically detects severe crashes\n• Calls 911 with GPS coordinates\n• Alerts trusted contacts\n• 30-second window to cancel false alarms\n\nTrusted Network:\n• Personal emergency contacts notified\n• Real-time location tracking\n• Contacts arrive 5-10 minutes before EMS\n• Blockchain-secured emergency records\n\nTap for detailed safety features →"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- App Permissions & Setup (THIRD MOST IMPORTANT) -->
        <LinearLayout
            android:id="@+id/permissionsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱 App Permissions &amp; Setup"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offline Mode (Always Available):\n• Voice recognition via Vosk\n• Emergency guidance from local database\n• Safety features operational\n• No internet required\n\nOnline Mode (Enhanced):\n• AI-powered unlimited emergency types\n• Real-time context analysis\n• Cloud-based emergency protocols\n• Enhanced location and contact services\n• Dynamic emergency response adaptation\n\nRequired Permissions:\n• Microphone - Voice recognition\n• Location - Emergency services\n• Contacts - Trusted network\n• Phone - Emergency calls\n• Storage - Offline database\n\nTap for setup instructions →"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- SOS Hero Gamification -->
        <LinearLayout
            android:id="@+id/gamificationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎮 SOS Hero Gamification"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level Up Like a Video Game:\n• Start as Novice Hero\n• Complete training to become Trainee Hero\n• Respond to emergencies to become Emergency Responder\n• Keep going until you're a Life-Saving Legend\n\nEarn Rewards:\n• Experience Points for learning and helping\n• BONK Tokens for emergency responses\n• SKR Tokens for building your safety network\n• Badges for achievements like 'CPR Master'\n\nTraining Modules:\n• CPR Training (50 BONK + 25 SKR)\n• First Aid Basics (30 BONK + 15 SKR)\n• Voice Recognition (25 BONK + 10 SKR)\n• App Features (20 BONK + 10 SKR)\n• Emergency Protocols (40 BONK + 20 SKR)\n\nTap for gamification details →"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Cross-App Challenges -->
        <LinearLayout
            android:id="@+id/crossAppChallengesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔄 Cross-App Challenges"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete challenges across Solana ecosystem apps to earn rewards and build emergency response skills:\n\nAvailable Challenges:\n• CPR ↔ DeFi Challenge (100 BONK + 50 SKR)\n• Emergency ↔ Gaming Challenge (150 BONK + 75 SKR)\n• Safety ↔ Trading Challenge (120 BONK + 60 SKR)\n• Hero ↔ DeFi Challenge (200 BONK + 100 SKR)\n• Community Swap Challenge (300 BONK + 150 SKR)\n\nPurpose: Expand emergency response network across Solana ecosystem\nGoal: More trained responders = more lives saved\n\nTap for detailed challenge information →"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Technical Deep Dive -->
        <LinearLayout
            android:id="@+id/technicalDeepDiveSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 Technical Deep Dive"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Offline Database (15 Types)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Drowning\n2. Heart Attack\n3. Choking\n4. Bleeding\n5. Stroke\n6. Seizure\n7. Poisoning\n8. Severe Burns\n9. Diabetic Emergency\n10. Allergic Reaction\n11. Trauma\n12. Unconscious\n13. Suicide Prevention\n14. Overdose Reversal\n15. Hypothermia"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Database Expansion"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional life-threatening emergency types are planned to be added regularly to the offline database through app updates. This ensures offline users have access to more emergency protocols without requiring internet connectivity."
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Context-Aware"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Each emergency type includes step-by-step life-saving instructions that work without internet connectivity."
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direct Actions (Skip Basic Steps)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anyone can use these direct action phrases to skip initial context assessment and get immediate, specific guidance:\n• CPR - Immediate chest compressions and rescue breathing\n• Heimlich - Abdominal thrusts for choking\n• AED - Automated external defibrillator usage\n• Tourniquet - Bleeding control for severe injuries\n• EpiPen - Emergency epinephrine administration\n• Rescue Breathing - Artificial ventilation\n• First Aid - Basic emergency care\n• FAST Test - Stroke assessment (Face, Arm, Speech, Time)\n• Poison Control - Emergency poison management\n• Cool Burn - Burn treatment and cooling\n• Medical Alert - Medical identification check"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Online Mode Enhanced Guidance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌐 Online Mode Enhanced Guidance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI-Powered Unlimited Types: When hybrid online/offline mode is active, the app provides unlimited emergency types with enhanced AI-powered guidance. The AI can handle any emergency scenario without database limitations.\n\nEnhanced Features:\n• Smart 911 operator integration\n• Real-time context analysis\n• Advanced voice recognition\n• Cloud-based emergency protocols\n• Enhanced location and contact services\n• Dynamic emergency response adaptation"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Medical Standards & Compliance -->
        <LinearLayout
            android:id="@+id/medicalStandardsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏥 Medical Standards &amp; Compliance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Protocols Based On:\n• American Heart Association (AHA) - CPR guidelines\n• American Red Cross - Emergency response protocols\n• Centers for Disease Control (CDC) - Medical guidelines\n• World Health Organization (WHO) - International standards\n• National Institutes of Health (NIH) - Medical research\n• Emergency Medical Services (EMS) - Field protocols\n• National Safety Council (NSC) - Safety standards\n• American College of Emergency Physicians (ACEP) - Emergency medicine\n• International Liaison Committee on Resuscitation (ILCOR) - Global standards\n• National Association of Emergency Medical Technicians (NAEMT) - Prehospital care"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy &amp; Security Compliance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• HIPAA compliance - Medical information protection\n• GDPR compliance - European data protection standards\n• COPPA compliance - Children's privacy protection\n• Emergency services standards - 911 integration protocols"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Development Status -->
        <LinearLayout
            android:id="@+id/developmentStatusSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚀 Development Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Working prototype ready for Solana Mobile deployment\n\n• Core tech: voice &amp; response\n• 15 emergency types: offline coverage\n• Features: silent SOS, crash, gamification\n• Solana: verification &amp; rewards\n• Multi-device sync: bluetooth"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- HACKATHON PITCH DECK -->
        <LinearLayout
            android:id="@+id/pitchDeckSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/features_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎯 HACKATHON PITCH DECK"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Hackathon Alignment -->
        <LinearLayout
            android:id="@+id/hackathonAlignmentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/clickable_card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏆 HACKATHON ALIGNMENT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solana Ecosystem Integration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• SKR Token Rewards - Users earn Seeker ecosystem tokens for emergency preparedness and community safety actions\n• Mobile Wallet Adapter - Seamless integration with Solana Mobile wallet for secure token transactions\n• Seeker Device Optimization - Built specifically for Solana Mobile Seeker with hardware acceleration\n• dApp Store Ready - Designed for immediate deployment on Solana Mobile dApp store"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solana-Specific Benefits"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/soft_green"
                android:gravity="left"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Default App Potential - Positioned to become the default safety app on every Seeker device\n• Blockchain Verification - Emergency records stored on Solana blockchain for tamper-proof documentation\n• Community Safety Network - Leverages Solana fast, low-cost transactions for real-time safety coordination\n• Token Economics - BONK and SKR rewards create sustainable engagement and community building"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
