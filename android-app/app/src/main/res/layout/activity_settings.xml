<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/emergency_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/emergency_red"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="← Back"
            android:textSize="16sp"
            android:background="@drawable/settings_button"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Contacts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/features_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📞 Emergency Contacts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/feature_title"
                android:layout_marginBottom="8dp" />

            <!-- Contact Name Input -->
            <EditText
                android:id="@+id/etContactName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Contact Name"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Contact Phone Input -->
            <EditText
                android:id="@+id/etContactPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Add Contact Button -->
            <Button
                android:id="@+id/btnAddContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Add Emergency Contact"
                android:textSize="14sp"
                android:background="@drawable/emergency_action_button"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Contacts List -->
            <TextView
                android:id="@+id/tvEmergencyContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No emergency contacts added"
                android:textSize="14sp"
                android:textColor="@color/feature_text"
                android:padding="8dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- App Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/features_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 App Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/feature_title"
                android:layout_marginBottom="8dp" />

            <!-- Voice Recognition Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voice Recognition"
                    android:textSize="16sp"
                    android:textColor="@color/feature_text" />

                <Switch
                    android:id="@+id/switchVoiceRecognition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Location Sharing Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location Sharing"
                    android:textSize="16sp"
                    android:textColor="@color/feature_text" />

                <Switch
                    android:id="@+id/switchLocationSharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Solana Integration Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/features_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔗 Solana Integration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/feature_title"
                android:layout_marginBottom="8dp" />

            <!-- Wallet Connection -->
            <Button
                android:id="@+id/btnConnectWallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Connect Solana Wallet"
                android:textSize="16sp"
                android:background="@drawable/wallet_button"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <!-- Emergency Preferences -->
            <Button
                android:id="@+id/btnEmergencyPreferences"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Emergency Preferences"
                android:textSize="16sp"
                android:background="@drawable/settings_button"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- App Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/features_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ App Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/feature_title"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version: 1.0.0\nBuild: 2025.08.02\nEmergency Types: 12\nVoice Recognition: Enabled\nSolana Integration: Active"
                android:textSize="14sp"
                android:textColor="@color/feature_text"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 